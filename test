void r(int *head, int nombre_element)
{
        if (*head == nombre_element) // Si on est a la fin on a execute 10x r, alors)
                *head = 0; // onn remet la tete a 0
        *head += 1; // On imcrement head pour dire que ca commence a partir du premier element
}

void print_array(int *array, int head, int nombre_element)
{
        int i = head;
        int count = 0;

        while (count < nombre_element) // on veut print 10 elenents quoi auil se passe
        {
                __builtin_printf("%d", array[i%nombre_element]);
                i++;
                count++;
        }
        __builtin_printf("\n");
}


int main(int ac, char **av)
{
        int nombre_element = 9; // C'est le nb delement de l'exemple
        int head = 0; // C'est l'index du premier element
        int array[10] = {1, 2, 3, 4, 5, 6, 7, 8, 9}; // une array en exemp
        print_array(array, head, nombre_element); // >>> 123456789
        r(&head, nombre_element);
        print_array(array, head, nombre_element); // >>> 234567891      
}